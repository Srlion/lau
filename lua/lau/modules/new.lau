let __NEW__;
do {
	let istable, isfunction = istable, isfunction;
	fn __NEW__(c, n, ...) {
		if !istable(c) {
			error("can't create an instance of '" .. n .. "' (not class)", 2);
		}

		let new_fn = c[n];
		if !isfunction(new_fn) {
			error("can't create an instance of '" .. n .. "' (no constructor)", 2);
		}

		new_fn(...)
	}
}